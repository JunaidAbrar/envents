# Django Core Settings
SECRET_KEY=changeme-generate-a-secure-random-key
DEBUG=False
DJANGO_SETTINGS_MODULE=envents_project.settings.production

# Allowed Hosts & CSRF (comma-separated list)
ALLOWED_HOSTS=enventsbd.com,envents-production.up.railway.app
CSRF_TRUSTED_ORIGINS=https://enventsbd.com,https://envents-production.up.railway.app

# Database (Neon Postgres on Railway)
# Example: postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech:5432/dbname?sslmode=require
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Security Settings
# Use 31536000 (1 year) for production, or 0 for staging/testing
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# AWS S3 Storage (for static and media files)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=ap-south-1
# Optional: custom domain (auto-generated if not set)
# AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.ap-south-1.amazonaws.com

# Email Configuration (example using Gmail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@enventsbd.com

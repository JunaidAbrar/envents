# Django Settings
DEBUG=False
SECRET_KEY=generate-a-secure-random-secret-key-here
DJANGO_SETTINGS_MODULE=envents_project.settings.production

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=envents_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_db_host
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@example.com

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# MCP Configuration
MCP_DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:5432/envents_prod
